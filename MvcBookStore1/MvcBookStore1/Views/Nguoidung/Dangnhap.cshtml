
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h4 style="color:red; text-align:center">@ViewBag.Thongbao</h4>
<h3 style="text-align:center">ĐĂNG NHẬP</h3>
<div style="display:flex; justify-content:center; align-items:center;">
    <table align="center">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height:30px">
                <td style="font-size: 15px">Tên đăng nhập:</td>
                <td style="height:20px">
                    @Html.TextBox("TenDN")
                    @ViewData["Loi1"]
                </td>
            </tr>
            <tr style="height:30px">
                <td align="right" style="font-size: 15px">Mật khẩu:</td>
                <td>
                    @Html.Password("Matkhau")
                    @ViewData["Loi2"]
                </td>
            </tr>
            <tr style="height:30px">
                <td></td>
                <td>
                    <input type="submit" value="Đăng nhập" />
                </td>
            </tr>
        }

    </table>
    <br />
    <p>@Html.ActionLink("Đăng Ký", "Dangky", "Nguoidung")</p>
    

</div>