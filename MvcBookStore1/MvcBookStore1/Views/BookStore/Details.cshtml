<style type="text/css">
    #Datmua a{
        clear: both;
        background-color: red;
        color: white;
        width: 120px;
        height: 20px;
        display:block;
        float: right;
        text-align:center;
        padding: 10px;
        text-decoration:none;
        font-weight:bold;
    }

    #Datmua a:hover{
        background-color: gray;
        color : red;
    }
</style>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h3>THÔNG TIN CHI TIẾT SÁCH</h3>
<div>
    <div style="width:40%; float:left; border-left: dotted 1px; border-color: azure">
        <img src="~/images/@Model.Hinhminhhoa" style="width:200px"/>
    </div>
    <div style="width:60%; float:left; padding:10px">
        <h4 style="font-weight:bold">Tên sách : @Model.Tensach</h4>
        <p style="text-align:justify"><span style="font-weight:bold">Mô tả : </span>@Model.Mota</p>
        <p style="font-weight:bold">Gía bán : <span style="font-size:20px; color:red">@Model.Dongia VNĐ</span></p>
    </div>
    <div>
        <div id="Datmua">
            <div id="Datmua">
                <a href="@Url.Action("ThemGioHang","GioHang", new { @iMasach =Model.Masach, @strURL= Request.Url.ToString() })"> ĐẶT MUA</a>
            </div>
        </div>
    </div>
</div>

